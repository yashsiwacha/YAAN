{
  "name": "yaan-desktop",
  "version": "2.0.0",
  "description": "YAAN Desktop - AI Assistant for Windows & macOS",
  "main": "main.js",
  "scripts": {
    "webpack": "webpack --config webpack.config.js",
    "webpack:dev": "webpack --config webpack.config.js --watch --mode development",
    "build:ui": "webpack --config webpack.config.js --mode production",
    "start": "npm run build:ui && electron .",
    "dev": "concurrently \"npm run webpack:dev\" \"wait-on dist/renderer.js && electron . --dev\"",
    "build": "npm run build:ui && electron-builder",
    "build:win": "npm run build:ui && electron-builder --win",
    "build:mac": "npm run build:ui && electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ai",
    "assistant",
    "electron",
    "desktop"
  ],
  "author": "Yash Siwach",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.4",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "html-webpack-plugin": "^5.6.6",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.4",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "electron-store": "^11.0.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "socket.io-client": "^4.8.3"
  },
  "build": {
    "appId": "com.yashsiwach.yaan",
    "productName": "YAAN",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
